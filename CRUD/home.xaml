<Window x:Class="CRUD.home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD"
        mc:Ignorable="d"
        Title="home" Height="450" Width="800">
    <Grid Background="#FFE2E2E2">
        <Grid HorizontalAlignment="Left" Width="147">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF11CFAC"/>
                    <GradientStop Color="White" Offset="0.992"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Button  Content="Add Data" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click"/>
        </Grid>
        
        
         
        <!--<Button Name="ShowBTN" Click="ShowBTN_Click" Content="Show Data" HorizontalAlignment="Left" Margin="682,59,0,0" VerticalAlignment="Top" Width="75"/>-->
    </Grid>
</Window>
